mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      -const photo = review.user? review.user.photo:'default.jpg'
      -const user = review.user ? review.user.name:`Anonymous User`
      img.reviews__avatar-img(src=`/img/users/${photo}`, alt=`${user}`)
      h6.reviews__user= user
    p.reviews__text= review.review
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')